import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner (System.in);
		
		int cod = sc.nextInt();
		int qnt = sc.nextInt();
		double preco;
					
			switch (cod) {
			case 1:
				cod = 1 == 4;
			break;
			}
			preco = cod*qnt;
		System.out.printf("Total: R$ %.2f%n", preco);
					
		sc.close();
	}

}