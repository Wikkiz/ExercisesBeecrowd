import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner (System.in);
		
		int cod = sc.nextInt();
		int qnt = sc.nextInt();
		double preco;
					
			switch (cod) {
			case 1:
				preco = qnt * 4;
			break;
			case 2:
				preco = qnt * 4.5;
			break;
			case 3:
				preco = qnt * 5.0;
			break;
			case 4:
				preco = qnt * 2.0;
			break;
			case 5:
				preco = qnt * 1.5;
			break;
			default:
				preco = 0;
			}			
			
		System.out.printf("Total: R$ %.2f%n", preco);
					
		sc.close();
	}

}